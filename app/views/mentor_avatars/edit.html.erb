<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>メンターアバター編集</h1>
        <div>
          <%= link_to "管理画面に戻る", admin_path, class: "btn btn-outline-primary" %>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <%= form_with(model: @mentor_avatar, local: true, html: { multipart: true }) do |f| %>
            <% if @mentor_avatar.errors.any? %>
              <div class="alert alert-danger">
                <ul>
                  <% @mentor_avatar.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :name, '名前', class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :description, '説明', class: 'form-label' %>
              <%= f.text_area :description, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :image, '画像ファイル', class: 'form-label' %>
              <% if @mentor_avatar.image.attached? %>
                <div class="mb-2">
                  <strong>現在の画像：</strong>
                  <%= image_tag url_for(@mentor_avatar.image), style: 'max-height: 100px;', class: 'd-block' %>
                </div>
              <% end %>
              <%= f.file_field :image, class: 'form-control' %>
              <small class="form-text text-muted">新しい画像を選択すると、現在の画像が置き換えられます。</small>
            </div>

            <div class="mb-3">
              <%= f.label :level, 'レベル', class: 'form-label' %>
              <%= f.number_field :level, class: 'form-control', min: 1 %>
            </div>

            <div class="text-center">
              <%= f.submit '更新する', class: 'btn btn-primary' %>
              <%= link_to '戻る', mentor_avatars_path, class: 'btn btn-secondary ms-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 