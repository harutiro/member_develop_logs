<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>メンターアバターの詳細</h1>
        <div>
          <%= link_to "管理画面に戻る", admin_path, class: "btn btn-outline-primary" %>
        </div>
      </div>

      <div class="card">
        <div class="card-body text-center">
          <div class="my-4">
            <% if @mentor_avatar.present? %>
              <% if @mentor_avatar.image.attached? %>
                <%= image_tag url_for(@mentor_avatar.image), class: "img-fluid rounded", style: "max-height: 400px;" %>
              <% else %>
                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 400px;">
                  <p class="text-muted">画像がありません</p>
                </div>
              <% end %>
            <% else %>
              <div class="alert alert-info">
                メンターアバターが登録されていません。
              </div>
            <% end %>
          </div>

          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <th style="width: 30%">名前</th>
                  <td><%= @mentor_avatar.name %></td>
                </tr>
                <tr>
                  <th>説明</th>
                  <td><%= @mentor_avatar.description %></td>
                </tr>
                <tr>
                  <th>成長段階</th>
                  <td><%= @mentor_avatar.level %>段階</td>
                </tr>
                <tr>
                  <th>総開発時間</th>
                  <td><%= @mentor_avatar.user.total_development_time %>分</td>
                </tr>
                <tr>
                  <th>達成数</th>
                  <td><%= @mentor_avatar.user.achievements.count %></td>
                </tr>
                <tr>
                  <th>最終更新日時</th>
                  <td><%= @mentor_avatar.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="mt-4">
            <%= link_to "一覧に戻る", mentor_avatars_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
