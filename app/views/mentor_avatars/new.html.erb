<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>メンターアバター新規登録</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @mentor_avatar, local: true, html: { multipart: true }) do |f| %>
            <% if @mentor_avatar.errors.any? %>
              <div class="alert alert-danger">
                <ul>
                  <% @mentor_avatar.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :name, '名前', class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :description, '説明', class: 'form-label' %>
              <%= f.text_area :description, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :image, '画像ファイル', class: 'form-label' %>
              <%= f.file_field :image, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :transformation_type, '成長タイプ', class: 'form-label' %>
              <%= f.select :transformation_type, MentorAvatar::TRANSFORMATION_TYPES.map { |t| [t, t] }, {}, class: 'form-select' %>
            </div>

            <div class="mb-3">
              <%= f.label :level, 'レベル', class: 'form-label' %>
              <%= f.number_field :level, class: 'form-control', min: 1 %>
            </div>

            <div class="text-center">
              <%= f.submit '登録する', class: 'btn btn-primary' %>
              <%= link_to '戻る', mentor_avatars_path, class: 'btn btn-secondary ms-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 