<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title">開発時間の詳細</h1>

        <div class="mb-4">
          <h3>基本情報</h3>
          <table class="table">
            <tr>
              <th>開始時間</th>
              <td><%= @development_time.start_time.strftime("%Y/%m/%d %H:%M") %></td>
            </tr>
            <tr>
              <th>終了時間</th>
              <td><%= @development_time.end_time.strftime("%Y/%m/%d %H:%M") %></td>
            </tr>
            <tr>
              <th>開発時間</th>
              <td><%= @development_time.duration / 60 %>分</td>
            </tr>
            <% if @development_time.notes.present? %>
              <tr>
                <th>メモ</th>
                <td><%= @development_time.notes %></td>
              </tr>
            <% end %>
          </table>
        </div>

        <div class="d-flex justify-content-between">
          <%= link_to "一覧に戻る", development_times_path, class: "btn btn-outline-primary" %>
          <%= link_to "新しい記録", new_development_time_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
