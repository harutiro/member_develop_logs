<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title">できたことの詳細</h1>

        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <th style="width: 30%">日時</th>
                <td><%= @achievement.created_at.strftime("%Y/%m/%d %H:%M") %></td>
              </tr>
              <tr>
                <th>内容</th>
                <td><%= @achievement.content %></td>
              </tr>
              <tr>
                <th>カテゴリー</th>
                <td><%= @achievement.category.humanize %></td>
              </tr>
              <tr>
                <th>ポイント</th>
                <td><%= @achievement.points %></td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
          <%= link_to "一覧に戻る", achievements_path, class: "btn btn-outline-secondary" %>
          <%= link_to "新規作成", new_achievement_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>
