<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>ユーザー管理</h1>
        <div>
          <%= link_to "新しいユーザーを登録", new_user_path, class: "btn btn-success" %>
          <%= link_to "ユーザー選択画面", select_user_path, class: "btn btn-outline-primary ms-2" %>
        </div>
      </div>

      <!-- ユーザー一覧テーブル -->
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">ユーザー一覧</h3>
          
          <% if @users.any? %>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>名前</th>
                    <th>メールアドレス</th>
                    <th>レベル</th>
                    <th>総開発時間</th>
                    <th>メンター</th>
                    <th>次のレベルアップ</th>
                    <th>登録日</th>
                    <th>操作</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td><%= user.id %></td>
                      <td><%= user.name %></td>
                      <td><%= user.email %></td>
                      <td>
                        <span class="badge bg-primary"><%= user.level %></span>
                      </td>
                      <td>
                        <%= (user.total_development_time / 3600.0).round(2) %>時間
                        <br><small class="text-muted">(<%= user.total_development_time %>秒)</small>
                      </td>
                      <td>
                        <% if user.mentor_avatar %>
                          <%= user.mentor_avatar.name %>
                          <br><small class="text-muted">レベル<%= user.mentor_avatar.level %></small>
                        <% else %>
                          <span class="text-muted">未設定</span>
                        <% end %>
                      </td>
                      <td>
                        <% next_level_hours = user.level * 1 %>
                        <% current_hours = user.total_development_time / 3600.0 %>
                        <% remaining_hours = next_level_hours - current_hours %>
                        <% if remaining_hours > 0 %>
                          <small class="text-muted">
                            あと<%= remaining_hours.round(2) %>時間
                            <br>(<%= (remaining_hours * 3600).round %>秒)
                          </small>
                        <% else %>
                          <span class="text-danger fw-bold">レベルアップ可能！</span>
                        <% end %>
                      </td>
                      <td><%= user.created_at.strftime("%Y/%m/%d %H:%M") %></td>
                      <td>
                        <div class="btn-group" role="group">
                          <%= link_to "編集", edit_user_path(user), class: "btn btn-outline-primary btn-sm" %>
                          <%= button_to "削除", user_path(user), 
                              method: :delete, 
                              class: "btn btn-outline-danger btn-sm",
                              data: { confirm: "#{user.name}さんを削除しますか？" } %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="alert alert-info">
              ユーザーが登録されていません。
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 