<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>レベルアップ設定編集</h1>
        <div>
          <%= link_to "管理画面に戻る", admin_path, class: "btn btn-outline-primary" %>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <%= form_with(model: @level_up_setting, local: true) do |f| %>
            <% if @level_up_setting.errors.any? %>
              <div class="alert alert-danger">
                <ul>
                  <% @level_up_setting.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :name, '設定名', class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control', placeholder: '例：標準設定' %>
            </div>

            <div class="mb-3">
              <%= f.label :description, '説明', class: 'form-label' %>
              <%= f.text_area :description, class: 'form-control', rows: 3, placeholder: '例：1時間ごとにレベルアップする標準的な設定' %>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :hours_per_level, 'レベルアップに必要な時間（時間）', class: 'form-label' %>
                  <%= f.number_field :hours_per_level, class: 'form-control', min: 1 %>
                  <small class="form-text text-muted">現在のレベル × この時間で次のレベルに到達</small>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :achievements_per_level, 'レベルアップに必要な達成数（個）', class: 'form-label' %>
                  <%= f.number_field :achievements_per_level, class: 'form-control', min: 0 %>
                  <small class="form-text text-muted">現在のレベル × この達成数で次のレベルに到達</small>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <div class="form-check">
                <%= f.check_box :enabled, class: 'form-check-input' %>
                <%= f.label :enabled, 'この設定を有効にする', class: 'form-check-label' %>
              </div>
              <small class="form-text text-muted">有効にすると、他の設定は自動的に無効になります</small>
            </div>

            <div class="text-center">
              <%= f.submit '更新する', class: 'btn btn-primary' %>
              <%= link_to '戻る', level_up_settings_path, class: 'btn btn-secondary ms-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 