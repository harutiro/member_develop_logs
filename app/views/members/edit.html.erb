<div class="container">
  <h1 class="text-2xl font-bold mb-6">メンバー編集</h1>
  <div class="card">
    <%= form_with(model: @member, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="flex gap-4 mt-4">
        <%= f.submit '更新', class: 'btn' %>
        <%= link_to '戻る', members_path, class: 'btn' %>
      </div>
    <% end %>
  </div>
</div> 